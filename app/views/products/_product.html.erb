      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      	<div class="row" id="producto">
      		<div class="col-md-12" id="titleo">
        <h3><%= link_to product.name, product %></h3>
        	</div>
        	<div class="col-md-12" id="imago">
        <%= image_tag(product.image_url,  width: "200", alt: "Bike Image", class: "img-responsive") %>
        	</div>
        
        <div class="col-md-12" id="descripto">
        <p><%= product.description %></p>
        </div>
        <div class="col-md-12" id="coloro">
        <p><%= product.color %></p>
        <p>                <%= link_to 'Show', product %> |
