<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
	<div class="row" id="producto">
		<div class="col-md-12" id="titleo">
  <h3><%= link_to product.name, product %></h3>
  	</div>
  	<div class="col-md-12" id="imago">
    <a href="#" class="thumbnail">
     <%= image_tag(product.image_url, alt: "Bike Image", class: "img-responsive") %>
     </a>
  	</div>
  
    <div class="col-md-12" id="descripto">
      <p><%= product.description %></p>
    </div>
    <div class="col-md-12" id="coloro">
      <p>Color: <%= product.color %></p>
      <%= link_to 'Show', product,
          :class => "btn btn-xs btn-info" %>
      <% if signed_in? && current_user.admin? %>  
        <%= link_to 'Edit', edit_product_path(product),
          :class => "btn btn-xs btn-warning" %> 
        <%= link_to 'Delete', product, 
          method: :delete, 
          data: { confirm: 'Are you sure?'},
          :class => "btn btn-xs btn-danger"  %>
      <% end %>
    </div>
  </div><!-- /row -->
</div><!-- /col -->